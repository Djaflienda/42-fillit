NAME=fillit

SRC:=$(wildcard *.c)

all: $(NAME)

$(NAME): $(SRC)
	gcc -o$@ $(SRC) -Llibft -lft
$(clear):

$(fclean):
	rm -f fillit
$(re): fclean all
